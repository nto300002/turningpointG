<h1>日記編集</h1>
<div class="form-field">
<%= form_with(model: @diary, url: diaries_path, local: true) do |f| %>
  <h2><%= f.label :title %></h2>
  <div><%= f.text_field :title, class: "input-text" %></div>
  <h2><%= f.label :detail %></h2>
  <div><%= f.text_field :detail, class: "input-text" %></div>
  <h2><%= f.label :emotion %></h2>
  <div><%= f.text_field :emotion, class: "input-text" %></div>
  <h2><%= f.label :evaluation %></h2>
  <div><%= f.range_field :evaluation, in: 1..100 %></div>
  <div><%= f.submit "編集", class: "submit-button"%></div>
<% end %>
</div>
<%= link_to '戻る', diaries_path, class: "bottom-link" %>
